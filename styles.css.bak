p {
    color: #666;
    text-align: center;
    margin-top: 5px;
    font-family: fantasy;
    border: 2px solid #666;
    margin: 15px;
    padding: 3px;
}
ul {
    list-style-type: none;    
    color: #666;
    text-align: center;
    margin-top: 20px;
    font-family: fantasy;
}
table {
    
    color: #fff;
    text-align: center;
    font-family:'Lucida Sans';
    border: 1px solid #fff;
    border-collapse: collapse;
    width: 95%;
}
th {
    background-color: #666;
    color: #fff;
    border: 1px solid #fff;
    padding: 20px;
    border-style: inset;
}
#grisClaro {
    background-color: #aaa;
    border-style: inset;
    width: 30%;
    padding: 10px;
}

